{
    "name": "setono/payum-quickpay",
    "type": "library",
    "description": "QuickPay gateway for Payum",
    "keywords": ["payum", "quickpay", "payment"],
    "homepage": "https://setono.dk",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "ext-json" : "*",
        "payum/core": "^1.5",
        "php-http/guzzle6-adapter": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.10.7",
        "phpunit/phpunit" : "~5.7||~6.0",
        "roave/security-advisories": "dev-master",
        "symplify/easy-coding-standard": "^5"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": { "Setono\\Payum\\QuickPay\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Setono\\Payum\\QuickPay\\Tests\\": "tests/" }
    },
    "scripts": {
        "analyse": "./vendor/bin/phpstan analyse -c phpstan.neon -l max src/",
        "check-style": "./vendor/bin/ecs check src/ tests/",
        "fix-style": "./vendor/bin/ecs check --fix src/ tests/",
        "test": [
            "@phpunit"
        ],
        "phpunit": "./vendor/bin/phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
