{
    "name": "setono/payum-quickpay",
    "type": "library",
    "description": "QuickPay gateway for Payum",
    "keywords": [
        "payum",
        "quickpay",
        "payment"
    ],
    "homepage": "https://setono.com",
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "payum/core": "^1.6",
        "thecodingmachine/safe": "^1.3"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^6.3",
        "php-http/guzzle6-adapter": "^1.0",
        "phpunit/phpunit": "^7.5",
        "roave/security-advisories": "dev-master",
        "setono/code-quality-pack": "^1.5"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\Payum\\QuickPay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Setono\\Payum\\QuickPay\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "all": [
            "@checks",
            "@test"
        ],
        "analyse": "phpstan analyse -c phpstan.neon -l max src/",
        "check-style": "ecs check src/ tests/",
        "checks": [
            "@check-style",
            "@analyse"
        ],
        "fix-style": "ecs check --fix src/ tests/",
        "phpunit": "phpunit",
        "test": [
            "@phpunit"
        ]
    }
}
